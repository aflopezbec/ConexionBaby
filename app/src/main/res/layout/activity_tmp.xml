<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aix.conexionbaby.tmpActivity">

 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
     tools:layout_editor_absoluteY="8dp"
     tools:layout_editor_absoluteX="8dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/bebe"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#fff"
                    android:text="GUDBI - Monitor"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_height="2dp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monitor de bebé"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#7cacd4"/>

        <android.opengl.GLSurfaceView
            android:id="@+id/my_surface_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nivel de riesgo especifico:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#7cacd4"/>

        <Button
            android:id="@+id/btn_temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginRight="10dp"
            android:background="#5cb85c"
            android:elevation="5dp"
            android:text="Temperatura: BAJO>"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_posicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginRight="10dp"
            android:background="#f0ad4e"
            android:elevation="5dp"
            android:text="Posición: MEDIO>"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_respiracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginRight="10dp"
            android:background="#d9534f"
            android:elevation="5dp"
            android:text="Respiración: ALTO>"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
